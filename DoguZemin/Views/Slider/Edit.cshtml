@model Entities.Slider

@{
    ViewBag.Title = "Slider Guncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<div class="container">
    <div class="row">
        <h2>Slider Güncelleme</h2>
        <hr />
    </div>

    <div class="row">
        @using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="form-horizontal">
                <div class="col-md-3">
                    <img src="~/images/slide/@Model.SlideImage" class="img-circle img-responsive" width="128" height="128" />
                    <br /><br />
                    <input type="file" name="SlideImage" id="SlideImage" class="form-control" accept=".jpg,.jpeg,.png"/><br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                </div>

                <div class="col-md-9">

                    @Html.ValidationSummary(false)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <textarea name="Text" class="ckeditor form-control" required>@Model.Text</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <button type="submit" class="btn btn-success"> <span class="glyphicon glyphicon-edit"></span>Güncelle</button>
                            <a href="/Slider/Index" class="btn btn-default"><span class="glyphicon glyphicon-circle-arrow-left"></span>İptal</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
